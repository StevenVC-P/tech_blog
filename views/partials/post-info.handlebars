<article class="post">
    <div class ="title">
        <span><a href = "/post/{{id}}">{{title}}</a></span><span style="float:right"> Posted by {{user.username}}</span><br>
        <span style="float:right">{{comments.length}} {{format_plural "comment" comment.length}}</span>
    </div>
    <div class ="content">
        <p>{{post_text}}</p>
    </div>
</article>